    <style name="TextInputLayoutAppearance">
        <!-- reference our hint & error styles -->
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">#C5C5C5</item>
        <item name="colorControlNormal">#C5C5C5</item>
        <item name="colorControlActivated">#C5C5C5</item>
        <item name="colorControlHighlight">#2644DC</item>
    </style>

    <style name="button_color">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:background">@drawable/submit</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="button_gray">
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:background">@drawable/button_round_edges</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

