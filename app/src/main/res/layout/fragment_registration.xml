<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/content"
            tools:context="com.rokad.authentication.LoginFragment">


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/new_registration"
                android:gravity="center"
                android:textSize="24sp"
                android:textStyle="bold|normal"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="16dp"/>

            <ImageView
                android:layout_marginTop="16dp"
                android:layout_gravity="center"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:padding="4dp"
                android:src="@drawable/user_profile"
                android:background="@drawable/button_round_edges"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:textStyle="bold|normal"
                android:textColor="@color/gray"
                android:textSize="18sp"
                android:layout_marginTop="@dimen/registration_top_margin"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"/>

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="4dp"
                android:layout_gravity="center|left"
                android:gravity="center|left"
                android:elevation="8dp"
                android:textSize="18sp"
                android:padding="12dp"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:inputType="text"
                android:background="@drawable/plane_rounded_edges"
                android:id="@+id/user_name"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email ID"
                android:textStyle="bold|normal"
                android:textColor="@color/gray"
                android:textSize="18sp"
                android:layout_marginTop="@dimen/registration_top_margin"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"/>

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="4dp"
                android:layout_gravity="center|left"
                android:gravity="center|left"
                android:elevation="8dp"
                android:textSize="18sp"
                android:padding="12dp"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:inputType="textEmailAddress"
                android:background="@drawable/plane_rounded_edges"
                android:id="@+id/email"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter Password"
                android:textStyle="bold|normal"
                android:textColor="@color/gray"
                android:textSize="18sp"
                android:layout_marginTop="@dimen/registration_top_margin"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"/>

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="4dp"
                android:layout_gravity="center|left"
                android:gravity="center|left"
                android:elevation="8dp"
                android:textSize="18sp"
                android:padding="12dp"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:inputType="textVisiblePassword"
                android:background="@drawable/plane_rounded_edges"
                android:id="@+id/password"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirmation Password"
                android:textStyle="bold|normal"
                android:textColor="@color/gray"
                android:textSize="18sp"
                android:layout_marginTop="@dimen/registration_top_margin"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"/>

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="4dp"
                android:layout_gravity="center|left"
                android:gravity="center|left"
                android:elevation="8dp"
                android:textSize="18sp"
                android:padding="12dp"
                android:paddingLeft="32dp"
                android:inputType="textPassword"
                android:paddingRight="32dp"
                android:background="@drawable/plane_rounded_edges"
                android:id="@+id/con_password"/>

        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/submit"
            android:text="@string/Register"
            android:layout_margin="20dp"
            android:layout_below="@+id/content"
            style="@style/submit_button"/>

    </RelativeLayout>
</ScrollView>

