<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foregroundGravity="center"
        android:id="@+id/login_card"
        android:layout_centerInParent="true"
        app:cardUseCompatPadding="true"
        android:elevation="16dp"
        android:layout_margin="32dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/mid_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="8dp"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="true"
                app:boxBackgroundColor="@android:color/transparent"
                android:hint="@string/prompt_mobile_number">
                <com.google.android.material.textfield.TextInputEditText
                   style="@style/input_box_styles"
                    android:id="@+id/login_mobile"
                    android:inputType="phone" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundColor="@android:color/transparent"
                app:hintEnabled="true"
                android:hint="@string/prompt_password">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/user_password"
                    style="@style/input_box_styles"
                    android:inputType="textPassword" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                style="@style/button_styles"
                android:id="@+id/login_button"
                android:text="Login"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </com.google.android.material.card.MaterialCardView>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:src="@drawable/logo_rokad"
        android:layout_centerHorizontal="true"
        android:padding="16dp"
        android:layout_above="@+id/login_card"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_card"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="18dp"
        android:textSize="16sp"
        android:textColor="#fff"
        android:textStyle="bold|normal"
        android:text="@string/forgot_password"
        android:layout_alignParentRight="true"
        android:layout_marginRight="18dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_card"
        android:layout_alignParentStart="true"
        android:layout_marginRight="18dp"
        android:textStyle="bold|normal"
        android:layout_marginLeft="18dp"
        android:textSize="16sp"
        android:textColor="#fff"
        android:text="@string/sign_up"
        android:layout_alignParentLeft="true" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/copy_rights"
        android:textColor="#fff"
        android:layout_margin="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />

</RelativeLayout>